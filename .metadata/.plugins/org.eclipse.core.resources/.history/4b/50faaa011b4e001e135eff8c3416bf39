		// 성적 처리 프로그램
		Scanner sc = new Scanner(System.in); 
		boolean sw = true; //상태 변수 
		
		while(sw) {
		System.out.println("==============================================");
		System.out.println("1.학생 수 | 2.점수 입력 | 3.점수 리스트 | 4.분석 | 5.종료");
		System.out.println("==============================================");
		
		//문자를 숫자로 변환
		int menu = Integer.parseInt(sc.nextLine());
		
		} //while 끝

		sc.close();
		
	}

}
