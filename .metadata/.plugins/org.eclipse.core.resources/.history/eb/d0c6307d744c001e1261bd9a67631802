package ifexample;

public class LimitSpeedTest {

	public static void main(String[] args) {
		// if문
		// 제한 속도(limit speed) 50이면 "제한 속도 위반"
		
		/* 
		 if(비교) {//비교문이 true이면 실행문이 작동함
			실행문;
		}; 
		*/
		
		int limitSpeed = 55;
		
		if(limitSpeed >= 50) {
			System.out.println("제한 속도 위반");
		};
		
		System.out.println("시속 " + limitSpeed + "km입니다.");
		
	}

}
