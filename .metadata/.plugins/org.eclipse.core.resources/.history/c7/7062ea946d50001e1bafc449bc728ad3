package reference.circle;

public class Circle {
	 Point center;
	 int radius;
	 
	 public Circle(int x, int y, int radius) {
		 this.x = x;
		 this.y = y;
		 this.radius = radius;
	 }
	 
	 public void showCircleInfo() {
		 System.out.println("원의 중심은 (" + x + ", " + y + ")이고, 반지름은 " 
	 + radius + "입니다.");
	 }
}
