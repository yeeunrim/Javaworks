package objectarray.dogs;

public class DogArray {

	public static void main(String[] args) {
		//Dog 인스턴스 4개 생성를 생성해서 배열에 저장하고
		//정보를 출력하세요. (get()함수 사용)
		Dog[] dog = new Dog[4];
		
		//배열의 저장(입력)
		dog[0] = new Dog("쿠키", "닥스훈트");
		dog[1] = new Dog("두부", "말티즈");
		dog[2] = new Dog("초코", "푸들");
		dog[3] = new Dog("백구", "진돗개");
		
		//전체 출력
		for(int i=0; i<dog.length; i++){
			System.out.println(dog[i].getName() + ", "+ dog[i].getType());
		}
		
		System.out.println();
		
		//향상된 for문
		for(Dog dog : dogs) {
			System.out.println(dog.getName() + ", "+ dog.getType());
		}

	}

}
